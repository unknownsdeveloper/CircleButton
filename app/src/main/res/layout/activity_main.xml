<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ankit.developer.unknowns.circlebutton.MainActivity">

    <com.cuboid.cuboidcirclebutton.CuboidButton

        android:layout_width="120dp"

        android:layout_height="120dp"

        android:textColor="@android:color/white"

        android:text="Normal"

        android:textSize="14dp"

        android:id="@+id/normalButton"



        />



    <!-- No Border and Hover effect -->

    <com.cuboid.cuboidcirclebutton.CuboidButton

        android:layout_width="120dp"

        android:layout_height="120dp"

        android:textColor="@android:color/white"

        android:text="No Border"

        android:textSize="14dp"

        android:id="@+id/noBorder"

        android:layout_below="@+id/normalButton"

        app:cub_border_radius="0dp"

        app:cub_color="#03A9F4"

        app:cub_hover_color="#00BFFFF1"/>



    />





    <!-- No Border , Hover and Icon -->

    <com.cuboid.cuboidcirclebutton.CuboidButton

        android:layout_width="120dp"

        android:layout_height="120dp"

        android:textColor="@android:color/white"

        android:text="No Border"

        android:textSize="14dp"

        android:id="@+id/iconButton"

        android:layout_below="@+id/noBorder"

        app:cub_border_radius="0dp"

        app:cub_color="#03A9F4"

        app:cub_hover_color="#00BFFFF1"

        app:cub_icon="@mipmap/ic_launcher"

        />





    <!-- Border , Hover -->

    <com.cuboid.cuboidcirclebutton.CuboidButton

        android:layout_width="120dp"

        android:layout_height="120dp"

        android:textColor="@android:color/white"

        android:text="Border"

        android:textSize="14dp"

        android:id="@+id/borderButton"

        android:layout_below="@+id/iconButton"

        app:cub_border_radius="4dp"

        app:cub_border_color="#4CAF50"

        app:cub_color="#37718E"

        app:cub_hover_color="#00BFFFF1"



        />



    <!-- Riple Effect -->

    <com.cuboid.cuboidcirclebutton.CuboidButton

        android:layout_width="120dp"

        android:layout_height="120dp"

        android:textColor="@android:color/white"

        android:text="Riple"

        android:textSize="14dp"

        android:id="@+id/rippleEffect"

        android:layout_toRightOf="@+id/normalButton"

        app:cub_riple_effect="true"

        app:cub_color="#F57C00"



        />



    <!-- Riple Effect and Icon and Border -->

    <com.cuboid.cuboidcirclebutton.CuboidButton

        android:layout_width="120dp"

        android:layout_height="120dp"

        android:textColor="@android:color/white"

        android:text="Riple"

        android:textSize="14dp"

        android:id="@+id/ripleEffectBorder"

        android:layout_toRightOf="@+id/normalButton"

        android:layout_below="@+id/rippleEffect"

        app:cub_riple_effect="true"

        app:cub_color="#F57C00"

        app:icon="@mipmap/ic_launcher"

        app:cub_border_radius="4dp"

        app:cub_border_color="#000000"

        />





    <!-- Border , Hover and Icon -->

    <com.cuboid.cuboidcirclebutton.CuboidButton

        android:layout_width="120dp"

        android:layout_height="120dp"

        android:textColor="@android:color/white"



        android:textSize="14dp"

        android:id="@+id/borderIcon"

        android:layout_toRightOf="@+id/normalButton"

        android:layout_below="@+id/ripleEffectBorder"

        app:cub_color="#F57C00"

        app:cub_icon="@mipmap/ic_launcher"

        app:cub_border_radius="4dp"

        app:cub_border_color="#000000"

        />

    />
</RelativeLayout>
